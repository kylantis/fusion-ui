
    <svg class="
        slds-icon
        slds-icon_{{size ? size : (type eq 'utility') ? 'x-small' : 'small' }}
        {{solid ? 'slds-icon-${type}-${name}' : '' transform='toIconClassName'}}
        {{foreground ? "slds-icon-${foreground}" : ''}}
        {{cssClass ? cssClass : ""}}"
            aria-hidden="true"
            {{foregroundColor ? 'style="fill: ${foregroundColor};"' : ''}}
            focusable="false">
            <use xlink:href="/assets/icons/{{type}}-sprite/svg/symbols{{rtl ? "-rtl" : ''}}.svg#{{name}}"></use>
    </svg>