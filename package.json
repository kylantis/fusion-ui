{
    "name": "imagine-ui",
    "version": "1.0.0",
    "description": "Imagine UI",
    "author": "Compute Essentials <corporate@compute-essentials.com>",
    "repository": {
        "type": "git",
        "url": "https://github.com/tonyobanon/project_panther_fe"
    },
    "license": "MIT",
    "git": {
        "hash": "%GIT_HASH%",
        "ref": "%GIT_REF%",
        "url": "%GIT_URL%"
    },
    "scripts": {
        "install-deps": "npm install && npm install --only=dev",
        "start": "node server/index.js",
        "dev": "nodemon server/index.js",
        "build": "gulp dist",
        "build-watch": "gulp dev",
        "lint": "eslint --ext js --fix src/ tasks/",
        "pretest": "npm run lint",
        "test": "jest --runInBand --forceExit --coverage"
    },
    "dependencies": {
        "browserify": "^16.3.0",
        "gulp": "^4.0.2",
        "gulp-babel": "^8.0.0",
        "gulp-imagemin": "^6.0.0",
        "gulp-rename": "^1.4.0",
        "gulp-sass": "^4.0.2",
        "gulp-sourcemaps": "^2.6.5",
        "gulp-uglify": "^3.0.2",
        "gulp-watch": "5.0.1",
        "gulplog": "^1.0.0",
        "normalize-scss": "7.0.1",
        "require-dir": "^1.2.0",
        "restify": "^8.3.3",
        "run-sequence": "^2.2.1",
        "vinyl-buffer": "^1.0.1",
        "vinyl-source-stream": "^2.0.0"
    },
    "devDependencies": {
        "@babel/core": "^7.4.5",
        "@babel/preset-env": "^7.4.5",
        "@babel/plugin-proposal-private-methods": "^7.4.4",
        "@babel/plugin-proposal-class-properties": "^7.5.0",
        "babel-eslint": "^10.0.2",
        "eslint": "^5.3.0",
        "eslint-config-airbnb-base": "^13.1.0",
        "eslint-plugin-import": "^2.17.3",
        "jest": "^24.8.0",
        "nodemon": "^1.19.1"
    },
    "jest": {
        "verbose": true,
        "forceExit": true,
        "collectCoverage": false,
        "coverageThreshold": {
            "global": {
                "branches": 100,
                "functions": 100,
                "lines": 100,
                "statements": 100
            }
        },
        "testEnvironment": "browser"
    }
}
