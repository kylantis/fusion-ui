{
    "name": "fusion-ui",
    "version": "1.0.0",
    "description": "Fusion UI - Framework for building full-stack UI components",
    "author": "Kylantis, Inc",
    "repository": {
        "type": "git",
        "url": "https://github.com/kylantis/fusion-ui"
    },
    "license": "GPL-3.0-only",
    "git": {
        "hash": "%GIT_HASH%",
        "ref": "%GIT_REF%",
        "url": "%GIT_URL%"
    },
    "scripts": {
        "start-server": "nodemon server/index.js",
        "build-archive": "APP_ID=platform node lib/model-factories/build-archive.js",
        "build": "APP_ID=platform gulp build && npm run build-archive",
        "scripts": "gulp compile-scripts",
        "watch": "APP_ID=platform gulp watch",
        "watch-build-archive": "BUILD_ARCHIVE=true npm run watch",
        "build-watch": "npm run build && npm run watch",
        "compile-components": "APP_ID=platform gulp compile-components",
        "compile-component": "APP_ID=platform gulp compile-component",
        "copy-component-assets": "gulp copy-component-assets",
        "lint": "eslint --ext js --fix src/ tasks/",
        "pretest": "npm run lint",
        "test": "jest --runInBand --forceExit --coverage"
    },
    "dependencies": {
        "@handlebars/parser": "^2.1.0",
        "acorn": "^8.12.1",
        "astring": "^1.8.6",
        "brotli-wasm": "^3.0.1",
        "cross-spawn": "^7.0.6",
        "fs-extra": "^11.2.0",
        "handlebars": "^4.7.8",
        "html-validate": "^4.6.0",
        "hyntax": "^1.1.9",
        "import-fresh": "^3.2.1",
        "jsdom": "^24.1.1",
        "line-column": "^1.0.2",
        "lodash": "^4.17.21",
        "normalize-scss": "7.0.1",
        "quicktype-core": "^23.0.170",
        "randomstring": "1.1.5",
        "uglify-js": "^3.18.0",
        "xml-js": "^1.6.11"
    },
    "devDependencies": {
        "browserify": "^16.5.0",
        "buffer": "^6.0.3",
        "esbuild": "^0.23.0",
        "gulp": "^4.0.2",
        "gulp-if": "^3.0.0",
        "gulp-rename": "^2.0.0",
        "gulp-sass": "^5.1.0",
        "gulp-sourcemaps": "^3.0.0",
        "mime-types": "^2.1.35",
        "nodemon": "^3.1.4",
        "require-dir": "^1.2.0",
        "restify": "^11.1.0",
        "restify-errors": "^8.0.2",
        "sass": "1.43.4",
        "shelljs": "^0.8.4",
        "stream-browserify": "^3.0.0",
        "stream-combiner2": "^1.1.1",
        "through2": "^3.0.1"
    }
}
